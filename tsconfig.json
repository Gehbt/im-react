    "allowJs": true,
    "checkJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "allowArbitraryExtensions": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "types": ["vitest/globals"],
    "customConditions": ["import","require"]
  },
  "include": ["core", "src", "examples", "tests", "indep", "./vitest.setup.ts"]
}
